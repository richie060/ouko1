            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/meditation"
                    android:layout_width="100dp"
                    android:layout_height="170dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="#ADC1AE"
                    android:paddingTop="10dp"
                    android:layout_weight="1"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Relaxation 101"
                                android:padding="5dp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium"
                                android:textSize="20dp"
                                android:textColor="#000"
                                android:layout_marginTop="2dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="How to relax your\n mind in 1hr"
                                android:fontFamily="sans-serif-medium"
                                android:textSize="16dp"
                                android:padding="5dp"
                                android:textColor="#000"
                                android:layout_marginTop="2dp"/>
                            <Button
                                android:id="@+id/watchnow1"
                                android:layout_width="wrap_content"
                                android:layout_height="60dp"
                                android:drawableRight="@drawable/ic_play"
                                android:layout_alignParentRight="true"
                                android:backgroundTint="#315A02"
                                android:text="Get started"
                                android:padding="10dp"
                                android:textColor="#fff"
                                android:textSize="15sp"
                                android:textStyle="bold" />


                        </LinearLayout>

                        <ImageView
                            android:layout_weight="1"
                            android:id="@+id/logo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/meditation" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
