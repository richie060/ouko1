                    android:layout_height="170dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="#ADC1AE"
                    android:paddingTop="7dp"
                    android:layout_weight="1"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="20dp">

